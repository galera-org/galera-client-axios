  "components": {
    "schemas": {
      "AlbumAddMedia": {
        "type": "object",
        "required": [
          "album_uuid",
          "media_uuid"
        ],
        "properties": {
          "album_uuid": {
            "type": "string"
          },
          "media_uuid": {
            "type": "string"
          }
        }
      },
      "AlbumInsertData": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "description": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string"
          }
        }
      },
      "AlbumResponse": {
        "type": "object",
        "required": [
          "created_at",
          "link",
          "name",
          "owner_id"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "partial-date-time"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "link": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "owner_id": {
            "type": "integer",
            "format": "int32"
          },
          "thumbnail_link": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "AlbumUpdateData": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ClaimsEncoded": {
        "description": "Encoded bearer token # Example decode an encoded bearer token ``` let encoded_token = Claims::new(1).encode().unwrap();\n\nlet decoded_token = encoded_token.decode(); ```",
        "type": "object",
        "required": [
          "encoded_claims"
        ],
        "properties": {
          "encoded_claims": {
            "type": "string"
          }
        }
      },
      "LoginResponse": {
        "description": "Response when logging in.",
        "type": "object",
        "required": [
          "bearer_token",
          "user_info"
        ],
        "properties": {
          "bearer_token": {
            "type": "string"
          },
          "user_info": {
            "$ref": "#/components/schemas/UserInfo"
          }
        }
      },
      "MediaDescription": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "MediaResponse": {
        "type": "object",
        "required": [
          "date_taken",
          "filename",
          "height",
          "owner_id",
          "uuid",
          "width"
        ],
        "properties": {
          "date_taken": {
            "type": "string",
            "format": "partial-date-time"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "filename": {
            "type": "string"
          },
          "height": {
            "type": "integer",
            "format": "uint32",
            "minimum": 0.0
          },
          "owner_id": {
            "type": "integer",
            "format": "int32"
          },
          "uuid": {
            "type": "string"
          },
          "width": {
            "type": "integer",
            "format": "uint32",
            "minimum": 0.0
          }
        }
      },
      "NewUser": {
        "description": "Struct for inserting new users.",
        "type": "object",
        "required": [
          "email",
          "password",
          "username"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "SystemInfoPublic": {
        "type": "object",
        "required": [
          "operatingSystem",
          "serverName",
          "serverVersion",
          "systemArchitecture"
        ],
        "properties": {
          "operatingSystem": {
            "type": "string"
          },
          "serverName": {
            "type": "string"
          },
          "serverVersion": {
            "type": "string"
          },
          "systemArchitecture": {
            "type": "string"
          }
        }
      },
      "UserInfo": {
        "description": "Used for sending information about user.",
        "type": "object",
        "required": [
          "email",
          "username"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "description": "Used for receiving login data.",
        "type": "object",
        "required": [
          "password",
          "username_or_email"
        ],
        "properties": {
          "password": {
            "type": "string"
          },
          "username_or_email": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "description": "requires a bearer token to access",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
